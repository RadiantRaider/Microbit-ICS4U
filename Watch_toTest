let rounded = 0
let time = ""
let minutes = 0
let hours = 0
let ampm = false
let adjust = 0
let Starttime = 0
input.onPinPressed(TouchPin.P0, function () {
    if (Starttime == 0) {
        Starttime = input.runningTime()
        basic.showIcon(IconNames.Butterfly)
    } else {
        basic.pause(200)
        basic.showLeds(`
            . . . . .
            . # # # .
            . . . . .
            . # # # .
            . . . . .
            `)
        rounded = (input.runningTime() - Starttime) / 1000
        basic.showNumber(rounded)
        Starttime = 0
    }
})
input.onPinPressed(TouchPin.P1, function () {
    adjust = hours
    if (ampm) {
        if (hours > 12) {
            adjust = hours - 12
        } else {
            if (hours == 0) {
                adjust = 12
            }
        }
    }
    time = "" + adjust
    time = "" + time + ":"
    time = "" + time + minutes / 10
    time = "" + time + minutes % 10
    if (adjust) {
        if (hours > 11) {
            time = "" + time + "PM"
        } else {
            time = "" + time + "AM"
        }
    }
    basic.showString(time)
})
input.onButtonPressed(Button.A, function () {
    if (hours < 23) {
        hours += 1
    } else {
        hours = 0
    }
})
input.onButtonPressed(Button.B, function () {
    if (minutes < 59) {
        minutes += 1
    } else {
        minutes = 0
    }
})
input.onButtonPressed(Button.AB, function () {
    ampm = !(ampm)
})
Starttime = 0
ampm = false
time = ""
adjust = 0
minutes = 0
hours = 0
basic.forever(function () {
    basic.pause(60000)
    if (minutes < 59) {
        minutes += 1
    } else {
        minutes = 0
        if (hours < 23) {
            hours += 1
        } else {
            hours = 0
        }
    }
})
